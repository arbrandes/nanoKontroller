    PARAM2_MUTE = 49
    PARAM3_MUTE = 50
    PARAM4_MUTE = 51
    PARAM5_MUTE = 52
    PARAM6_MUTE = 53
    PARAM7_MUTE = 54
    PARAM8_MUTE = 55
    PARAM1_RECORD = 64
    PARAM2_RECORD = 65
    PARAM3_RECORD = 66
    PARAM4_RECORD = 67
    PARAM5_RECORD = 68
    PARAM6_RECORD = 69
    PARAM7_RECORD = 70
    PARAM8_RECORD = 71
    PARAM1_SLIDER = 0
    PARAM2_SLIDER = 1
    PARAM3_SLIDER = 2
    PARAM4_SLIDER = 3
    PARAM5_SLIDER = 4
    PARAM6_SLIDER = 5
    PARAM7_SLIDER = 6
    PARAM8_SLIDER = 7
    PARAM1_KNOB = 16
    PARAM2_KNOB = 17
    PARAM3_KNOB = 18
    PARAM4_KNOB = 19
    PARAM5_KNOB = 20
    PARAM6_KNOB = 21
    PARAM7_KNOB = 22
    PARAM8_KNOB = 23

    led_support = [
        TRACK_PREV,
