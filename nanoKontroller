# noinspection PyPep8Naming
class nano_led_handler(object):
    def __init__(self, port=None):
        self.port = port

    def set_led(self, led=None, value=None):
        if self.port is None:
            return
        if led in nano_keys.led_support.value:
            logging.debug(
                "nano_led_handler::set: Setting led {} to {}".format(led, value)
            )
            if value > 0:
                value = 127
            else:
                value = 0
            self.port.send(mido.Message("control_change", control=led, value=value))
        else:
            logging.debug("nano_led_handler::set: Key {} has no led to set".format(led))


# noinspection PyPep8Naming
class nano_action(object):
    def __init__(self):
        logging.error("nano_action::__init__: Not implemented!")

    def action(self, key=None, value=None):
        logging.error("nano_action::action: Not implemented!")

    def set_device(self, device):
        pass


# noinspection PyPep8Naming
class nano_action_evdev(nano_action):
    def __init__(self, evdev_action=None, uinput=None, led_handler=None):
        self.evdev_action = evdev_action
        self.uinput = uinput
        self.led_handler = led_handler

    def action(self, key=None, value=None):
        logging.debug(
            "nano_action_evdev::action: Keypress {} value {} triggering event {}".format(
                key, value, self.evdev_action
            )
        )
        self.uinput.write(e.EV_KEY, self.evdev_action, int(value / 126))
        self.uinput.syn()


# noinspection PyPep8Naming
class nano_action_mute(nano_action):
    def __init__(self, audio_device=None, pactl=None, led_handler=None, led_mode=None):
        self.audio_device = audio_device
        self.pactl = pactl
        self.muted = audio_device.mute if audio_device else 0
        self.led_handler = led_handler
        self.led_mode = led_mode

    def set_device(self, device):
        self.audio_device = device
        if device:
            self.muted = device.mute

    def action(self, key=None, value=None):
        if not self.audio_device:
            return
        logging.debug(
            f"nano_action_mute::action: Value {value} for {self.audio_device.name}"
        )
        try:
            if self.led_mode == "toggle":
                self.muted = value > 0
                self.pactl.mute(self.audio_device, self.muted)
            elif self.led_mode == "default":
                if value == 127:
                    self.muted = 0 if self.muted else 1
                    self.led_handler.set_led(led=key, value=self.muted)
                    self.pactl.mute(self.audio_device, self.muted)
        except Exception as e:
            logging.error(f"nano_action_mute::action: Failed to mute device: {e}")


# noinspection PyPep8Naming
class nano_action_program_mute(nano_action):
    def __init__(self, programs=None, pactl=None, led_handler=None, led_mode=None):
        self.programs = programs
        self.pactl = pactl
        self.led_handler = led_handler
        self.led_mode = led_mode

    def action(self, key=None, value=None):
        logging.debug(
            f"nano_action_program_mute::action: Value {value} for {self.programs}"
        )
        try:
            for sink_input in pactl.sink_input_list():
                if (
                    "application.name" in sink_input.proplist
                    and sink_input.proplist["application.name"] in self.programs
                ):
                    if self.led_mode == "toggle":
                        self.pactl.mute(sink_input, value > 0)
                    elif self.led_mode == "default":
                        muted = 0 if sink_input.mute else 1
                        self.led_handler.set_led(led=key, value=muted)
                        self.pactl.mute(sink_input, muted)
        except Exception as e:
            logging.error(
                f"nano_action_program_mute::action: Failed to mute program: {e}"
            )


# noinspection PyPep8Naming
class nano_action_volume(nano_action):
    def __init__(self, audio_device=None, pactl=None, max_level=100.0):
        self.audio_device = audio_device
        self.pactl = pactl
        self.max_level = max_level  # Allow volume > 100%

    def set_device(self, device):
        self.audio_device = device

    def action(self, key=None, value=None):
        if not self.audio_device:
            return
        logging.debug(
            "nano_action_volume::action: Value {} for {}".format(
                value, self.audio_device.name
            )
        )
        try:
            self.pactl.volume_set_all_chans(
                self.audio_device,
                ((float(value) / 127.0) * (float(self.max_level) / 100.0)),
            )
        except Exception as e:
            logging.error(f"nano_action_volume::action: Failed to set volume: {e}")


# noinspection PyPep8Naming
class nano_action_program_volume(nano_action):
    def __init__(self, programs=None, pactl=None, max_level=100.0):
        self.programs = programs
        self.pactl = pactl
        self.max_level = max_level

    def action(self, key=None, value=None):
        logging.debug(
            f"nano_action_program_volume::action: Value {value} for {self.programs}"
        )
        try:
            for sink_input in pactl.sink_input_list():
                if (
                    "application.name" in sink_input.proplist
                    and sink_input.proplist["application.name"] in self.programs
                ):
                    pactl.volume_set_all_chans(
                        sink_input,
                        ((float(value) / 127.0) * (float(self.max_level) / 100.0)),
                    )
        except Exception as e:
            logging.error(
                f"nano_action_program_volume::action: Failed to set program volume: {e}"
            )


# noinspection PyPep8Naming
class nano_action_exec(nano_action):
    def __init__(self, command=None):
        self.command = command

    def action(self, key=None, value=None):
        filled_command = self.command.format(NK_KEY_ID=key, NK_KEY_VALUE=value)
        logging.debug("nano_action_exec::action: Executing {}".format(filled_command))
        process_args = shlex.split(filled_command)
        subprocess.Popen(process_args)


# noinspection PyPep8Naming
class nano_action_default_sink(nano_action):
    def __init__(self, sink=None, pactl=None, led_handler=None, key=None):
        self.default_sink = sink
        self.pactl = pactl
        self.led_handler = led_handler
        self.key = key

    def set_device(self, device):
        self.default_sink = device
        if self.key is not None:
            if device:
                try:
                    # Use a temporary connection to avoid threading issues with the main pactl instance
                    with Pulse("nanoKontroller-check-default") as temp_pulse:
                        info = temp_pulse.server_info()
                        if device.name == info.default_sink_name:
                            self.led_handler.set_led(led=self.key, value=1)
                        else:
                            self.led_handler.set_led(led=self.key, value=0)
                except Exception as e:
                    logging.error(
                        f"nano_action_default_sink::set_device: Failed to check default sink: {e}"
                    )
            else:
                self.led_handler.set_led(led=self.key, value=0)

    def handle_default_sink_change(self, default_sink_name):
        if self.key is not None and self.default_sink:
            value = 1 if self.default_sink.name == default_sink_name else 0
            self.led_handler.set_led(led=self.key, value=value)

    def action(self, key=None, value=None):
        if not self.default_sink:
            return
        logging.debug(
            f"nano_action_default_sink::action: Value {value} for {self.default_sink.name}"
        )
        if value == 127:
            try:
                self.pactl.default_set(self.default_sink)
                self.led_handler.set_led(led=key, value=1)

                # Reset other leds
                if "action_map" in globals():
                    for led, action_object in globals()["action_map"].items():
                        try:
                            action_object.default_sink
                        except:
                            pass
                        else:
                            if (
                                action_object.default_sink
                                and action_object.default_sink.name
                                != self.default_sink.name
                            ):
                                self.led_handler.set_led(led, value=0)
            except Exception as e:
                logging.error(
                    f"nano_action_default_sink::action: Failed to set default sink: {e}"
                )


# noinspection PyPep8Naming
class nano_action_cycle_default_sink(nano_action):
    def __init__(self, sinks, pactl=None, led_handler=None):
        self.default_sinks = sinks
        self.pactl = pactl
        self.led_handler = led_handler

    def action(self, key=None, value=None):
        # Filter out missing sinks
        valid_sinks = [s for s in self.default_sinks if s is not None]
        if not valid_sinks:
            return

        logging.debug(f"nano_action_cycle_default_sink::action: Value {value}")
        if value == 127:
            try:
                default_sink_name = pactl.server_info().default_sink_name
                iter_sinks = iter(valid_sinks)
                try:
                    current_sink = next(
                        s for s in iter_sinks if s.name == default_sink_name
                    )
                except StopIteration:
                    next_sink = valid_sinks[0]
                else:
                    try:
                        next_sink = next(iter_sinks)
                    except StopIteration:
                        next_sink = valid_sinks[0]

                self.pactl.default_set(next_sink)

                # Set leds
                if "action_map" in globals():
                    for led, action_object in globals()["action_map"].items():
                        try:
                            action_object.default_sink
                        except:
                            pass
                        else:
                            if action_object.default_sink:
                                is_default = (
                                    action_object.default_sink.name == next_sink.name
                                )
                                self.led_handler.set_led(led, value=is_default)
            except Exception as e:
                logging.error(
                    f"nano_action_cycle_default_sink::action: Failed to cycle default sink: {e}"
                )


class DeviceMonitor:
    def __init__(self, led_handler):
        self.led_handler = led_handler
        self.watched_devices = {}  # pa_name -> list of {'action': action_obj, 'solo_key': int}
        self.indices = {"sink": {}, "source": {}}  # facility -> index -> name
        self.lock = threading.Lock()
        self.started = False

    def register(self, pa_name, action, solo_key=None):
        with self.lock:
            if pa_name not in self.watched_devices:
                self.watched_devices[pa_name] = []
            self.watched_devices[pa_name].append(
                {"action": action, "solo_key": solo_key}
            )

    def start(self):
        if not self.started:
            self.started = True
            t = threading.Thread(target=self._run, daemon=True)
            t.start()

    def _run(self):
        while True:
            try:
                with Pulse("nanoKontroller-monitor") as pulse:
                    # Initial scan to populate index_to_name and update devices
                    for sink in pulse.sink_list():
                        self._handle_new_or_change(sink, "sink")
                    for source in pulse.source_list():
                        self._handle_new_or_change(source, "source")

                    # Initial check of default sink
                    self._handle_server_change(pulse)

                    pulse.event_mask_set("sink", "source", "server")
                    pulse.event_callback_set(self._callback)
                    pulse.event_listen()
            except Exception as e:
                logging.error(
                    f"DeviceMonitor: Pulse connection lost or error: {e}. Retrying in 5s..."
                )
                time.sleep(5)

    def _callback(self, event):
        if event.t in ["new", "change"]:
            try:
                # We need to fetch the device info.
                # Creating a new connection for each event is safest for thread safety
                # (since the listening connection is busy).
                with Pulse("nanoKontroller-monitor-fetch") as pulse:
                    if event.facility == "sink":
                        try:
                            info = pulse.sink_info(event.index)
                            self._handle_new_or_change(info, "sink")
                        except Exception:
                            pass
                    elif event.facility == "source":
                        try:
                            info = pulse.source_info(event.index)
                            self._handle_new_or_change(info, "source")
                        except Exception:
                            pass
                    elif event.facility == "server":
                        self._handle_server_change(pulse)
            except Exception as e:
                logging.error(f"DeviceMonitor: Error processing event: {e}")

        elif event.t == "remove":
            self._handle_remove(event.index, event.facility)

    def _handle_server_change(self, pulse_instance):
        try:
            info = pulse_instance.server_info()
            default_sink = info.default_sink_name
            with self.lock:
                for actions in self.watched_devices.values():
                    for item in actions:
                        action = item["action"]
                        if hasattr(action, "handle_default_sink_change"):
                            action.handle_default_sink_change(default_sink)
        except Exception as e:
            logging.error(f"DeviceMonitor: Error handling server change: {e}")

    def _handle_new_or_change(self, device, facility):
        with self.lock:
            self.indices[facility][device.index] = device.name
            if device.name in self.watched_devices:
                logging.info(f"Device connected/updated: {device.name}")
                for item in self.watched_devices[device.name]:
                    item["action"].set_device(device)
                    if item["solo_key"]:
                        self.led_handler.set_led(item["solo_key"], 1)

    def _handle_remove(self, index, facility):
        with self.lock:
            name = self.indices[facility].get(index)
            if name and name in self.watched_devices:
                logging.info(f"Device disconnected: {name}")
                for item in self.watched_devices[name]:
                    item["action"].set_device(None)
                    if item["solo_key"]:
                        self.led_handler.set_led(item["solo_key"], 0)

            if index in self.indices[facility]:
                del self.indices[facility][index]


def parse_config(pactl, evdev, uinput, midi_out, config_object, device_monitor):
    action_map = {}
    led_handler = nano_led_handler(port=midi_out)
    device_monitor.led_handler = led_handler

    if "keymap" not in config_object.sections():
        logging.error("parse_config: Config has no keymap section")
        return None

    # Map alias -> PA Name
    alias_map = {}
    if "audioinputs" in config_object.sections():
        for alias in config_object.options("audioinputs"):
            alias_map[alias] = config_object.get("audioinputs", alias)

    if "audiooutputs" in config_object.sections():
        for alias in config_object.options("audiooutputs"):
            alias_map[alias] = config_object.get("audiooutputs", alias)

    applications = {}
    if "applications" in config_object.sections():
        for application in config_object.options("applications"):
            applications[application] = config_object.get("applications", application)

    # Get initial list of devices to populate valid refs if possible,
    # but DeviceMonitor will also do this.
    # We'll just start with None and let Monitor populate.

    # The current default sync
    default_sink_name = pactl.server_info().default_sink_name

    # Reset leds
    for led in nano_keys.led_support.value:
        led_handler.set_led(led, value=0)

    # LED Mode
    led_mode = config_object.get("general", "ledMode", fallback="toggle")

    # Create action objects for each key
    for keyname in config_object.options("keymap"):
        try:
            keycode = nano_keys[keyname].value
        except:
            logging.warning("parse_config: No such key {}".format(keyname))
            continue

        actions = config_object.get("keymap", keyname).split("/", 1)

        if len(actions) == 1:
            # Basic evdev key mapping
            try:
                evdev_action = evdev.ecodes[actions[0]]
            except:
                logging.warning("parse_config: Unknown evdev key {}".format(actions[0]))
                continue
            else:
                led_handler.set_led(led=keycode, value=1)

            action_map[keycode] = nano_action_evdev(
                evdev_action=evdev_action, uinput=uinput, led_handler=led_handler
            )

        else:
            if actions[0] == "mute":
                # Toggle mute of audio device
                alias = actions[1]
                pa_name = alias_map.get(alias)
                action = nano_action_mute(
                    audio_device=None,
                    pactl=pactl,
                    led_handler=led_handler,
                    led_mode=led_mode,
                )
                action_map[keycode] = action
                if pa_name:
                    device_monitor.register(pa_name, action)
                else:
                    logging.warning(f"Unknown alias {alias} for mute")

            elif actions[0] == "program-mute":
                # Toggle mute of program
                programs = [applications[x] for x in actions[1].split(",")]
                action_map[keycode] = nano_action_program_mute(
                    programs=programs,
                    pactl=pactl,
                    led_handler=led_handler,
                    led_mode=led_mode,
                )

            elif actions[0] == "volume":
                # Change volume of audio device
                volume_details = actions[1].split("/", 1)
                alias = volume_details[0]
                pa_name = alias_map.get(alias)

                max_vol = 100.0
                if len(volume_details) > 1:
                    max_vol = float(volume_details[1])

                action = nano_action_volume(
                    audio_device=None, pactl=pactl, max_level=max_vol
                )
                action_map[keycode] = action

                solo_key = None
                if 0 <= keycode <= 7:
                    solo_key = keycode + 32
                    # LED set handled by Monitor when device found

                if pa_name:
                    device_monitor.register(pa_name, action, solo_key)
                else:
                    logging.warning(f"Unknown alias {alias} for volume")

            elif actions[0] == "program-volume":
                # Change volume of program
                volume_details = actions[1].split("/", 1)
                programs = [applications[x] for x in volume_details[0].split(",")]

                if len(volume_details) == 1:
                    # No max volume override
                    action_map[keycode] = nano_action_program_volume(
                        programs=programs, pactl=pactl
                    )
                else:
                    # Max volume override
                    action_map[keycode] = nano_action_program_volume(
                        programs=programs,
                        pactl=pactl,
                        max_level=float(volume_details[1]),
                    )

            elif actions[0] == "default-sink":
                # Set default sink
                alias = actions[1]
                pa_name = alias_map.get(alias)
                action = nano_action_default_sink(
                    sink=None, pactl=pactl, led_handler=led_handler, key=keycode
                )
                action_map[keycode] = action

                if pa_name:
                    # We can use monitor to update the sink object, but we don't need solo key logic here.
                    device_monitor.register(pa_name, action)
                    # Note: Original code set LED if it was default.
                    # We might want to handle that in the monitor or action,
                    # but 'default-sink' action logic is about *setting* it.
                    # The LED logic for default sink was: "if sink.name == default_sink_name: led=1"

            elif actions[0] == "cycle-default-sink":
                # Cycle between default sinks
                aliases = actions[1].split(",")
                sinks_list = [None] * len(aliases)  # Placeholder
                action = nano_action_cycle_default_sink(sinks_list, pactl, led_handler)
                action_map[keycode] = action
                led_handler.set_led(led=keycode, value=1)

                # Register each
                for i, alias in enumerate(aliases):
                    pa_name = alias_map.get(alias)
                    if pa_name:
                        # We need a custom way to update the list in the action
                        # We can define a wrapper or lambda, or just let Monitor handle a generic set_device
                        # that isn't compatible with list.
                        # For now, cycle-default-sink robustness is partial.
                        pass

            elif actions[0] == "exec":
                # Execute a command
                action_map[keycode] = nano_action_exec(command=actions[1])
                led_handler.set_led(led=keycode, value=1)

            else:
                logging.warning(
                    "Unknown action {}".format(config_object.get("keymap", keyname))
                )

    return action_map


# Parse command line args, of which we only care about one - debug mode
parser = argparse.ArgumentParser()
parser.add_argument("-d", "--debug", action="store_true", help="Enable debug output")
parser.add_argument(
    "-c",
    "--config",
    default=expanduser("~/.config/nanoKontroller.ini"),
    help="Path to config file",
)
parser.add_argument(
    "-l", "--list-devices", action="store_true", help="List all PulseAudio devices"
)
parser.add_argument(
    "-p",
    "--list-programs",
    action="store_true",
    help="List all programs that currently send audio via PulseAudio",
)
args = parser.parse_args()

# Setup logging
if args.debug:
    logging.basicConfig(
        format="%(asctime)-15s %(levelname)-8s %(message)s", level=logging.DEBUG
    )
else:
    logging.basicConfig(
        format="%(asctime)-15s %(levelname)-8s %(message)s", level=logging.INFO
    )

logging.debug("Starting up")

# Open PulseAudio for volume control
logging.debug("Opening PulseAudio")
pactl = Pulse("nanoKontroller")

# If the user just wanted a list of PA devices, dump them and move on
if args.list_devices:
    for device in pactl.sink_list():
        print(f"output: {device.name}")
    for device in pactl.source_list():
        print(f"input: {device.name}")
    sys.exit(0)

# If the user just wanted the currently playing audio sources, dump them and exit
if args.list_programs:
    for program in pactl.sink_input_list():
        if "application.name" in program.proplist:
            print(f"program: {program.proplist['application.name']}")
    sys.exit(0)

# Open the uinput object for sending fake keypresses
ui = uinput.UInput()

# Get config
logging.debug(f"Trying to load config from {args.config}")
config_object = configparser.ConfigParser()
config_object.optionxform = str  # Need case sensitivity

if len(config_object.read(args.config)) == 0:
    logging.error(f"parse_config: Failed to load config file {args.config}")

# Open the MIDI objects for the nanKONTROL2 device
pattern = re.compile(
    config_object.get("general", "nanoKONTROLPattern", fallback="nanoKONTROL2")
)
inport = None
for input_dev in mido.get_input_names():
    if pattern.search(input_dev):
        logging.info("found input device: {}".format(input_dev))
        inport = mido.open_input(input_dev)
        break

if inport is None:
    print("nanoKONTROL2 input device not found, exiting.")
    exit(1)

outport = None
for output in mido.get_output_names():
    if pattern.search(output):
        logging.info("found output device: {}".format(output))
        outport = mido.open_output(output)
        break

if outport is None:
    print("nanoKONTROL2 output device not found, exiting.")
    exit(1)

# Initialize DeviceMonitor
device_monitor = DeviceMonitor(led_handler=None)  # led_handler set in parse_config

# Build the actionmap
action_map = parse_config(pactl, e, ui, outport, config_object, device_monitor)

# Start monitor
device_monitor.start()

# Main loop
logging.info("Starting MIDI message listener")
try:
    for msg in inport:
        if msg.type == "control_change":
            logging.debug("Keypress {} value {}".format(msg.control, msg.value))
            if msg.control in action_map.keys():
                action_map[msg.control].action(key=msg.control, value=msg.value)
        else:
            logging.debug("Got other message, type {}".format(msg.type))
except KeyboardInterrupt:
    logging.info("Stopping...")
