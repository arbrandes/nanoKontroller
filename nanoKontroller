    TRACK_NEXT = 59
    CYCLE = 46
    MARKER_SET = 60
    MARKER_PREV = 61
    MARKER_NEXT = 62
    PREV = 43
    NEXT = 44
    STOP = 42
    PLAY = 41
    RECORD = 45
    PARAM1_SOLO = 32
    PARAM2_SOLO = 33
    PARAM3_SOLO = 34
    PARAM4_SOLO = 35
    PARAM5_SOLO = 36
